<?xml version="1.0" encoding="utf-8"?>
<com.aries.ui.view.radius.RadiusRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/bg_root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:rv_backgroundColor="@color/white"
    app:rv_strokeWidth="1px"
    app:rv_radius="5dp"
    app:rv_strokeColor="@color/blue0"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="120dp"
        android:id="@+id/bank_logo"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_below="@+id/bank_name"
        android:layout_height="60dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="建设银行"
        android:visibility="gone"
        android:textColor="@color/black_text"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="@dimen/dp_10"
        android:id="@+id/bank_name"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="储蓄卡"
        android:visibility="gone"
        android:layout_alignLeft="@+id/bank_name"
        android:layout_below="@+id/bank_name"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="111111"
        android:id="@+id/card_no"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_10"
        android:textSize="17sp"
        android:layout_alignTop="@+id/bank_name"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_height="wrap_content"/>

</com.aries.ui.view.radius.RadiusRelativeLayout>