<?xml version="1.0" encoding="utf-8"?>
<com.daasuu.bl.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/locationLinearLayout"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    app:bl_arrowDirection="right"
    app:bl_arrowHeight="8dp"
    app:bl_arrowPosition="16dp"
    app:bl_arrowWidth="8dp"
    app:bl_cornersRadius="6dp"
    >


    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="90dp"
        >

        <ImageView
            android:id="@+id/key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_above="@+id/status"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/locationTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/key"
            android:layout_toEndOf="@+id/key"
            android:layout_alignTop="@+id/key"
            android:textStyle="bold"
            android:singleLine="true"
            android:text="恭喜发财,大吉大利"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/white"
            android:textColorLink="#666666"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/get_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/key"
            android:layout_alignBottom="@+id/key"
            android:text="领取红包"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/white"
            android:textColorLink="#666666"
            android:textSize="12sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/status"
            android:textSize="10sp"
            android:layout_alignParentBottom="true"
            android:padding="5dp"
            android:background="@drawable/bottom_txt_radio_shape"
            android:layout_gravity="bottom"
            android:text="萌聊红包"
            android:textColor="@color/gray7"
            />
    </RelativeLayout>



</com.daasuu.bl.BubbleLayout>


