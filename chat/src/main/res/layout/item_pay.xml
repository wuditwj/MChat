<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/image_recourse"
        android:layout_margin="@dimen/dp_10"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/sp_14"
        android:layout_width="wrap_content"
        android:id="@+id/name"
        android:layout_toEndOf="@+id/image_recourse"
        android:layout_alignTop="@+id/image_recourse"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_recourse" />
    <TextView
        android:id="@+id/name_sub"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@id/image_recourse"
        android:textColor="@color/color_777777"
        android:textSize="12sp"
        android:layout_alignBottom="@+id/image_recourse"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_recourse" />
    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/status"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dp_10"
        android:layout_height="wrap_content" />
</RelativeLayout>