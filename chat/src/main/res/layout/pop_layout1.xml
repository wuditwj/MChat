<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/pop_bg"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/add_friend"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="22dp"
                android:src="@mipmap/ic_pop_add_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:background="@drawable/linearlayout_underline_view"
                android:layout_height="match_parent"
                android:text="添加好友"
                android:textColor="@android:color/black" />

        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chat"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="22dp"
                android:src="@mipmap/ic_pop_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="发起群聊"
                android:textColor="@android:color/black" />

        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/sao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="22dp"
                android:src="@mipmap/ic_pop_sao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:background="@drawable/linearlayout_top_line_view"
                android:gravity="center"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="扫一扫"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/qr_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="22dp"
                android:src="@mipmap/ic_pop_qr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/linearlayout_top_line_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="我的二维码"
                android:textColor="@android:color/black" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>