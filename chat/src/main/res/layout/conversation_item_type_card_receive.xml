<?xml version="1.0" encoding="utf-8"?>
<com.daasuu.bl.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/locationLinearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:bl_bubbleColor="@color/white"
    app:bl_arrowDirection="left"
    app:bl_arrowHeight="8dp"
    app:bl_arrowPosition="16dp"
    app:bl_arrowWidth="8dp"
    app:bl_cornersRadius="6dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/bg_package"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            >

            <com.allen.library.CircleImageView
                android:id="@+id/key"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/key"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorLink="#666666"
                android:textSize="14sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/line"
            android:layout_height="1px"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/status"
            android:text="个人名片"
            android:textSize="12sp"
            android:textColor="@color/gray7"
            />
    </LinearLayout>

</com.daasuu.bl.BubbleLayout>

