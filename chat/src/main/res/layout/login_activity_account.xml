<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

<androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/toolbar"
    android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:src="@mipmap/bg_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="25sp" />
        <LinearLayout
            android:background="@drawable/edit_text_radio"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="40dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:src="@mipmap/ic_mobile"
                android:padding="5dp"
                android:layout_height="wrap_content"/>
            <View
                android:layout_margin="5dp"
                android:layout_width="1px"
                android:background="@color/gray3"
                android:layout_height="match_parent"/>
            <EditText
                android:inputType="number"
                android:maxLength="11"
                android:layout_gravity="center_vertical"
                android:id="@+id/accountEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_10"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textColorHint="@color/gray1"
                android:textSize="15sp"
                />

        </LinearLayout>

        <com.aries.ui.view.radius.RadiusLinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/login_sms_layout"
            android:layout_marginTop="@dimen/dp_10"
            app:rv_radius="5dp"
            android:visibility="gone"
            app:rv_strokeWidth="0.5dp"
            app:rv_strokeColor="@color/gray3"
            android:layout_height="40dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:src="@mipmap/ic_pwd"
                android:padding="5dp"
                android:layout_height="wrap_content"/>
            <View
                android:layout_margin="5dp"
                android:layout_width="1px"
                android:background="@color/gray3"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/authCodeEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:focusable="true"
                android:drawablePadding="@dimen/dp_10"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textColorHint="@color/gray1"
                android:textSize="15sp" />
            <View
                android:layout_margin="5dp"
                android:layout_width="1px"
                android:background="@color/gray3"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/requestAuthCodeButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:textColor="@color/gray1"
                android:gravity="center_vertical"
                android:text="发送验证码"
                />
        </com.aries.ui.view.radius.RadiusLinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/login_pwd_layout"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/edit_text_radio"
            android:layout_height="40dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:src="@mipmap/ic_pwd"
                android:padding="5dp"
                android:layout_height="wrap_content"/>
            <View
                android:layout_margin="5dp"
                android:layout_width="1px"
                android:background="@color/gray3"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:drawablePadding="@dimen/dp_10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="请输入登密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textColorHint="@color/gray1"
                android:textSize="15sp" />
        </LinearLayout>



        <com.allen.library.SuperButton
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/login"
            app:sCornersRadius="20dp"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            app:sSolidColor="@color/colorPrimary"
            app:sStrokeColor="@color/colorPrimary"
            android:text="确认登录"
            android:layout_marginTop="@dimen/dp_40"
            android:textSize="17sp"
            android:textColor="@android:color/white"
            />

        <com.allen.library.SuperButton
            android:id="@+id/register"
            android:gravity="center"
            app:sCornersRadius="20dp"
            app:sSolidColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:text="注册"
            android:textSize="17sp" />
        <CheckBox
            android:button="@null"
            android:layout_width="wrap_content"
            android:id="@+id/pwd_login"
            android:text="手机验证码登录"
            android:padding="@dimen/dp_10"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:id="@+id/weChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="60dp"
        android:src="@mipmap/ic_we_chat_login"
        />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="10sp"
            android:text="登陆即代表您已同意"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="《萌聊IM用户协议》"
            android:id="@+id/xieyi"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="和"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="《萌聊IM隐私政策》"
            android:id="@+id/yinsi"
            android:textSize="10sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
