<?xml version="1.0" encoding="utf-8"?>
<com.daasuu.bl.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/locationLinearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    app:bl_arrowDirection="right"
    app:bl_arrowHeight="8dp"
    app:bl_arrowPosition="16dp"
    app:bl_bubbleColor="#FFC3E9FC"
    app:bl_arrowWidth="8dp"
    app:bl_cornersRadius="6dp">


    <TextView
        android:id="@+id/contentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="phone|email|map|web"
        android:gravity="left|center_vertical"
        android:linksClickable="true"
        android:maxWidth="240dp"
        android:minHeight="40dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text="嗯嗯嗯嗯嗯嗯"
        android:textColorLink="#3655bf"
        android:textSize="16sp" />


</com.daasuu.bl.BubbleLayout>



