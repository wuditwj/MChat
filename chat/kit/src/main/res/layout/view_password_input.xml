<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/table_num"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="6"

    android:orientation="vertical">

    <!--    <View style="@style/style_separate_line" />-->


    <LinearLayout style="@style/layout_input_amount_style">

        <TextView
            android:id="@+id/btn_1"
            style="@style/btn_input_num_style"
            android:layout_marginRight="1px"
            android:layout_marginTop="1px"
            android:onClick="onClick"
            android:tag="1"
            android:text="1" />

        <TextView
            android:id="@+id/btn_2"
            style="@style/btn_input_num_style"
            android:layout_marginRight="1px"
            android:layout_marginTop="1px"
            android:tag="2"
            android:text="2" />

        <TextView
            android:id="@+id/btn_3"
            style="@style/btn_input_num_style"
            android:layout_marginTop="1px"
            android:tag="3"
            android:text="3" />
    </LinearLayout>

    <LinearLayout style="@style/layout_input_amount_style">

        <TextView
            android:id="@+id/btn_4"
            style="@style/btn_input_num_style"
            android:layout_marginRight="1px"
            android:tag="4"
            android:text="4" />

        <TextView
            android:id="@+id/btn_5"
            style="@style/btn_input_num_style"
            android:layout_marginRight="1px"
            android:tag="5"
            android:text="5" />

        <TextView
            android:id="@+id/btn_6"
            style="@style/btn_input_num_style"
            android:tag="6"
            android:text="6" />
    </LinearLayout>

    <LinearLayout style="@style/layout_input_amount_style">

        <TextView
            android:id="@+id/btn_7"
            style="@style/btn_input_num_style"
            android:layout_marginRight="1px"
            android:tag="7"
            android:text="7" />

        <TextView
            android:id="@+id/btn_8"
            style="@style/btn_input_num_style"
            android:layout_marginRight="1px"
            android:tag="8"
            android:text="8" />

        <TextView
            android:id="@+id/btn_9"
            style="@style/btn_input_num_style"
            android:tag="9"
            android:text="9" />
    </LinearLayout>

    <LinearLayout style="@style/layout_input_amount_style">

        <TextView
            style="@style/btn_input_num_style"
            android:layout_marginRight="1px"
            android:background="@color/gray_btn" />

        <TextView
            android:id="@+id/btn_0"
            style="@style/btn_input_num_style"
            android:layout_marginRight="1px"
            android:tag="0"
            android:text="0" />


        <TextView
            android:id="@+id/btn_del"
            style="@style/btn_input_num_style"
            android:tag="-1"
            android:text="删除"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
